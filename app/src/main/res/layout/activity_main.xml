<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/toolbarmenu"
        android:id="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="30sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"/>


            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="100dp"
                android:layout_height="40dp"
                android:src="@drawable/addmember"
                android:id="@+id/addmember"/>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/notificationimg"
                android:id="@+id/notification"/>


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/addddd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="56dp"
            android:layout_marginEnd="57dp"
            android:text="Add Members "
            android:textColor="#FA0404"
            android:textSize="40sp" />


        <TextView
            android:id="@+id/andstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addddd"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="90dp"
            android:text="And start chat"
            android:textColor="#F3DB08"
            android:textSize="35sp" />


        <ImageView
            android:id="@+id/topid"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/addddd"
            android:layout_marginEnd="58dp"
            android:src="@drawable/toparrow" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>














</LinearLayout>