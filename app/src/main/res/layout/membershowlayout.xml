<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:background="#53B3DF"
        android:backgroundTint="#53B3DF"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/relative"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/mprofile"
                android:layout_width="96dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_height="96dp"
                android:src="@drawable/avtar"
                app:civ_border_width="2dp"
                app:civ_border_color="#862797"/>

            <TextView
                android:id="@+id/memberusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="40dp"
                android:textColor="@color/black"
                android:layout_marginTop="23dp"
                android:layout_toEndOf="@+id/mprofile"
                android:text="Username"

                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/followbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/memberusername"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="11dp"
                android:layout_marginBottom="-6dp"
                android:text="Follow" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
